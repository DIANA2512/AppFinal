<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:id="@+id/tableLayout1">
       
        <TextView
            android:text="REGISTRO DE CLIENTE"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/textView1"
            android:layout_width="500dp"
            android:layout_height="34.5dp" />

        

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout" >

            <TextView
                android:text="Nombre : "
                android:layout_width="102.3dp"
                android:layout_height="45.4dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:id="@+id/txtcliente" />

            <EditText
                android:layout_width="270.3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/edtNombreCliente"
                android:inputType="textPersonName" />

            

        </LinearLayout>
         <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2" >

            <TextView
                android:text="Apellido : "
                android:layout_width="102.3dp"
                android:layout_height="45.4dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:id="@+id/txtapellido" />

            <EditText
                android:layout_width="270.3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/edtApellidoCliente"
                android:inputType="textPersonName" />

            

        </LinearLayout>
         <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3" >

            <TextView
                android:text="Cédula : "
                android:layout_width="102.3dp"
                android:layout_height="45.4dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:id="@+id/txtcedula" />

            <EditText
                android:layout_width="270.3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/edtCedulaCliente"
                android:inputType="number" 
                android:maxLength="13"
                />

            

        </LinearLayout>
         <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4" >

            <TextView
                android:text="Correo : "
                android:layout_width="102.3dp"
                android:layout_height="45.4dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:id="@+id/txtcorreo" />

            <EditText
                android:layout_width="270.3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/edtCorreoCliente"
                android:inputType="textWebEmailAddress" />

            

        </LinearLayout>
         <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5" >

            <TextView
                android:text="Dirección : "
                android:layout_width="102.3dp"
                android:layout_height="45.4dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:id="@+id/txtdireccion" />

            <EditText
                android:layout_width="270.3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/edtDireccionCliente"
                android:inputType="text" />

            

        </LinearLayout>
        
  
        <LinearLayout
            android:orientation="horizontal"
		    android:minWidth="25px"
		    android:minHeight="25px"
		    android:layout_marginTop="20dp"
		    android:gravity="center_horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:id="@+id/lnhg" >
            
            <Button
                android:text="Registrar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@layout/mybutton"
                android:textColor="@android:color/white"
                android:id="@+id/btnRegistrar" />
            <Button
                android:text="Salir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@layout/mybutton"
                android:textColor="@android:color/white"
                android:id="@+id/btnsalir" />


        </LinearLayout>

    </TableLayout>

    
</RelativeLayout>

